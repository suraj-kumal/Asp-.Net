@model IEnumerable<WebApp4BySuraj.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Product List</h1>

<div class="container mt-4">
    <p>
        <a asp-action="Create" class="btn btn-success">Create New</a>
    </p>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>
                    Product Name
                </th>
                <th>
                    Price
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-primary">Edit</a>
                            <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-info">Details</a>
                            <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?')">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
